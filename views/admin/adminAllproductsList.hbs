{{>adminTop}}

<div class="card">
    <div class="card-body">
     
        <h4 class="card-title ,mt-5"> All Products</h4>
        {{!-- <p class="card-description"> <code></code> --}}
        </p>
        <div class="table-responsive">

                       
                    
            <section>

                <table class="table table-striped mt-5">
                    <thead>
                        <tr>
                         
                            <th scope="col">Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th> 
                            <th scope="col">Image</th>
                            {{!-- <th>Image</th> --}}
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each products}}
    <tr>
    
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}} </td>
      <td><img style="width:50px;height:50px" src="/images/{{this._id}}0.jpg" ></td>
        <td><a href="/admin/admineditproduct?productId={{this._id}} " class="btn btn-primary btn-sm btn-block" >Edit</a>
    <a href='/admin//admindeleteproduct?productId={{this._id}}' class="btn btn-danger btn-sm btn-block" onclick="return confirm('Confirm to delete Product {{this.name}}')" >Disable</a></td>
  </tr>
    </tr>
    {{/each}}

                    </tbody>
                </table>
        </div>
        </section>

    </div>
</div>
</div>
</div>
</div>
</div>
</div>

|{{>adminBottom}}

 