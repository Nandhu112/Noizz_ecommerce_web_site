

{{>adminTop}}
<section>

    <div class="container">
      
        <table class="table table-striped mt-5" id="myTable">
            <thead>
                <tr>
                   
                    <th scope="col" style="text-align: center;">Date</th>
                    <th scope="col" style="text-align: center;">Customer</th>
                    {{!-- <th scope="col">Password</th> --}}
                    {{!-- <th scope="col">admin</th> --}}
                    <th scope="col" style="text-align: center;">Payment-status</th>
                    {{!-- <th>Image</th> --}}
                    <th style="text-align: center;">Fullfillment-status</th>
                    <th style="text-align: center;">Total</th>
                    <th style="text-align: center;">Order details</th>


                </tr>
            </thead>
           
            <tbody>
                {{#each orders}}
                <tr>
                    
                    <td style="text-align: center;">{{ formatDate this.date}}</td>
                    <td style="text-align: center;">{{this.userName}}</td>
                    {{!-- <td>{{this.Password}}</td> --}}
                    {{!-- <td>{{this.Admin}} </td> --}}
                    <td style="text-align: center;">{{this.paymentMethod}} </td>
                    {{!-- <td style="text-align: center;">{{this.status}} </td> --}}
            
                    <td style="text-align: center;">{{this.status}} </td>
                    <td style="text-align: center;">{{this.amountPaid}} </td>

                     <td><button class="btn btn-primary btn-sm btn-block"
                            onclick="window.location.href='/admin/adminViewOrderDetails?OrderId={{this._id}}'">Order details</button> 
                      
                    </td>
                   
                    
                  
                </tr>
                {{!-- </tr> --}}
                {{/each}}

            </tbody>
        </table>
    </div>
</section>
{{>adminBottom}}
