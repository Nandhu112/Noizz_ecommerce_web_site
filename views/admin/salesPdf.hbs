<h2 style="text-align-last: center;">Sales Report</h2>

{{#if orders.length}}
  <table class="table" id="productsTable">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Date</th>
        <th scope="col">User</th>
        <th scope="col">Products</th>
        <th scope="col">Bill Address</th>
        <th scope="col">Payment</th>
        <th scope="col">Status</th>
        {{!-- <th scope="col">TotalQuantity</th> --}}
        <th scope="col">Amount</th>
      </tr>
    </thead>
    <tbody>
    
    {{#each orders as |order index|}}
      {{!-- Calculate the totalAmount --}}
     
      <tr>
        <td>{{index}}</td>
        <td>{{formatDate order.date}}</td>
        <td>{{order.userId.Name}}</td>
       {{#if (gt products.length 1) }}
        <td> {{#each products}}{{product.Name}}, {{/each}}</td>
        {{else}}
           <td> {{#each products}}{{product.Name}} {{/each}}</td>
       {{/if}}   
        <td>{{order.deliveryDetails.address1}}<br>{{order.deliveryDetails.mobile}}</td>
        <td>{{order.paymentMethod}}</td>
        <td>{{order.status}}</td>
        {{!-- <td>{{order.totalQuantity}}</td> --}}
        <td>{{order.totalAmount}}</td>
      </tr>
    {{/each}}
    <tr>
      <td colspan="2">Total Amount:</td>
      <td colspan="3">{{totalAmount}}</td>
    </tr>
  {{!-- {{else}}
    <tr>
      <td colspan="6">No orders found.</td>
    </tr> --}}

{{else}}
  <p>No orders found.</p>
{{/if}}

