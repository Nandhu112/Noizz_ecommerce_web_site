

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="stylesheets/manageAddress.css">
    <title>Document</title>
</head>
<body>
    <body style="min-height: 100vh;">
    <div class="card p-3 py-3 m-5 card-1 text-left">
        <div style="display:flex; justify-content: space-between">
            <div>
               <h4 >Delivery Address</h4>
            </div>
              <div>
                   <a href="/getProfilePage"><button class="btn btn-danger">X</button></a> 
              </div>
             
        </div>
    
       {{#if condition}}
        <div class="p-3 card-2">
               {{#each address}}
                <div class="p-3 card-child">
        
                    <div class="d-flex flex-row align-items-center">
                     
                            <span class="circle">
                             <a href="/deleteAddress?id={{this._id}}">  <i class="fa fa-trash delete-icon"></i></a> 
                                
                            </span>

                            <span class="circle">
                                <a href="/editAddress?id={{this._id}}"><i class="fa-solid fa-pen"></i></a>
                            </span>
                        <div class="d-flex flex-column ms-3" style="text-transform: capitalize;">
                           
                            <span class="">Name :{{this.firstname}} {{this.lastname}}</span>
                            <span class="">Address :  {{this.address1}}</span>
                            <span class="">City : {{this.city}}</span>
                            <span class="">Mobile : {{this.mobile}}</span>
                            <span class="">Pincode : {{this.pincode}}</span>
                        </div>
                    </div>
                </div>
               
           {{/each}}
            <a href="/addAddress">
            <div class="p-3 card-child mt-4 py-4">
                <div class="d-flex flex-row align-items-center">
                    <span class="circle-3">
                        <i class="fa fa-plus"></i>
                    </span>
                    <div class="d-flex flex-column ms-3 m-3">
                        <h6 style="text-decoration: none;" class="fw-bold text-primary">Add New Address</h6>
                    </div>
                </div>
            </div>
        </a>
        </div>
    {{else}}

<a href="/addAddress">
            <div class="p-3 card-child mt-4 py-4">
                <div class="d-flex flex-row align-items-center">
                    <span class="circle-3">
                        <i class="fa fa-plus"></i>
                    </span>
                    <div class="d-flex flex-column ms-3 m-3">
                        <h6 class="fw-bold text-primary">Add New Address</h6>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>
{{/if}}
    <script src="https://kit.fontawesome.com/5f6d1ef682.js" crossorigin="anonymous"></script>   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
</body>
</html>